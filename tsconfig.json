    "./artifacts/IERC173.json",
    "./artifacts/InstallmentsModel.json",
    "./artifacts/LoanApprover.json",
    "./artifacts/LoanManager.json",
    "./artifacts/Model.json",
    "./artifacts/ModelDescriptor.json",
    "./artifacts/Oracle.json",
